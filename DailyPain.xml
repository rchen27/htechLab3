<campaign>
  <campaignUrn>urn:rchen27:lower_back_pain</campaignUrn>
  <campaignName>Lower Back Pain</campaignName>
  <surveys>
    <survey>
    <!-- PROMIS 3-Item Pain Intensity Short Form 3A -->
        <id>promisThreeItemPainIntensityShortForm</id>
        <title>Pain Survey</title>
        <description>This survey allows you to track your daily pain intensity and its interference with your daily activities.</description>
        <displayType>category</displayType>
        <submitText>You have finished the survey.</submitText>
        <anytime>true</anytime>
        <contentList>
            <!-- 
    The key elements are 1-indexed as opposed to our usual 0-indexing. 
    This is because the values are used to score the assessment. (To be confirmed with Ida and Rich.)
    -->
                <prompt>
                    <id>worstPainIntensity</id>
                    <promptText>Over the past 24 hours, how intense was your pain at its worst on a scale of 1 to 10?</promptText>
                    <displayLabel>Worst Pain Intensity</displayLabel>
                    <displayType>category</displayType>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>1</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>2</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>3</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>4</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>5</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>6</label>
                        </property>
                        <property>
                            <key>7</key>
                            <label>7</label>
                        </property>
                        <property>
                            <key>8</key>
                            <label>8</label>
                        </property>
                        <property>
                            <key>9</key>
                            <label>9</label>
                        </property>
                        <property>
                            <key>10</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                    <id>averagePainIntensity</id>
                    <promptText>Over the past 24 hours, how intense was your average pain?</promptText>
                    <displayType>category</displayType>
                    <displayLabel>Average Pain Intensity</displayLabel>
                    <promptType>single_choice</promptType>
                    <properties>
                        <property>
                            <key>1</key>
                            <label>1</label>
                        </property>
                        <property>
                            <key>2</key>
                            <label>2</label>
                        </property>
                        <property>
                            <key>3</key>
                            <label>3</label>
                        </property>
                        <property>
                            <key>4</key>
                            <label>4</label>
                        </property>
                        <property>
                            <key>5</key>
                            <label>5</label>
                        </property>
                        <property>
                            <key>6</key>
                            <label>6</label>
                        </property>
                        <property>
                            <key>7</key>
                            <label>7</label>
                        </property>
                        <property>
                            <key>8</key>
                            <label>8</label>
                        </property>
                        <property>
                            <key>9</key>
                            <label>9</label>
                        </property>
                        <property>
                            <key>10</key>
                            <label>10</label>
                        </property>
                    </properties>
                    <skippable>false</skippable>
                    <skipLabel>Skip</skipLabel>
                </prompt>
                      <!-- 
         The key elements are 1-indexed as opposed to our usual 0-indexing. 
         This is because the values are used to score the assessment. (To be confirmed with Ida and Rich.)
              -->
              
                <prompt>
                  <id>painInterferenceDayToDayActivities</id>
                  <promptText>Over the past 24 hours, how much did pain interfere with your day to day activities?</promptText>
                   <displayType>category</displayType>
                  <displayLabel>Pain Inteference in Daily Activities</displayLabel>
                  <promptType>single_choice</promptType>
                  <properties>
                    <property>
                      <key>1</key>
                      <label>Not at all</label>
                    </property>
                    <property>
                      <key>2</key>
                      <label>A little bit</label>
                    </property>
                    <property>
                      <key>3</key>
                      <label>Somewhat</label>
                    </property>
                    <property>
                      <key>4</key>
                      <label>Quite a bit</label>
                    </property>
                    <property>
                      <key>5</key>
                      <label>Very much</label>
                    </property>             
                  </properties>
                  <skippable>false</skippable>
                  <skipLabel>Skip</skipLabel>
                </prompt>
                
                <prompt>
                  <id>painInterferenceWorkAroundTheHome</id>
                  <promptText>Over the past 24 hours, how much did pain interfere with your work around the home?</promptText>
                   <displayType>category</displayType>
                  <displayLabel>Pain Interference with Work Around Home</displayLabel>
                  <promptType>single_choice</promptType>
                  <properties>
                    <property>
                      <key>1</key>
                      <label>Not at all</label>
                    </property>
                    <property>
                      <key>2</key>
                      <label>A little bit</label>
                    </property>
                    <property>
                      <key>3</key>
                      <label>Somewhat</label>
                    </property>
                    <property>
                      <key>4</key>
                      <label>Quite a bit</label>
                    </property>
                    <property>
                      <key>5</key>
                      <label>Very much</label>
                    </property>             
                  </properties>
                  <skippable>false</skippable>
                  <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                  <id>painInterferenceSocialActivities</id>
                  <promptText>Over the past 24 hours, how much did pain interfere with your ability to participate in social activities?</promptText>
                   <displayType>category</displayType>
                  <displayLabel>Pain Interference with Social Activities</displayLabel>
                  <promptType>single_choice</promptType>
                  <properties>
                    <property>
                      <key>1</key>
                      <label>Not at all</label>
                    </property>
                    <property>
                      <key>2</key>
                      <label>A little bit</label>
                    </property>
                    <property>
                      <key>3</key>
                      <label>Somewhat</label>
                    </property>
                    <property>
                      <key>4</key>
                      <label>Quite a bit</label>
                    </property>
                    <property>
                      <key>5</key>
                      <label>Very much</label>
                    </property>             
                  </properties>
                  <skippable>false</skippable>
                  <skipLabel>Skip</skipLabel>
                </prompt>
                <prompt>
                  <id>NumMinExercise</id>
                  <displayLabel>Number of Minutes Exercising</displayLabel>
                  <displayType>count</displayType>
                  <promptText>How many minutes did you spend exercising today?</promptText>
                  <abbreviatedText>Hours Exercising</abbreviatedText>
                  <promptType>number</promptType>
                  <default>0</default>
                  <skippable>false</skippable>
                  <properties>
                    <property>
                      <key>min</key>
                      <label>0</label>
                    </property>
                    <property>
                      <key>max</key>
                      <label>24</label>
                    </property>
                  </properties>
                </prompt>
            </contentList>
        </survey>
  </surveys>
</campaign>